train_datagen = ImageDataGenerator(
     zoom_range = 0.2,
     shear_range = 0.2,
     horizontal_flip=True,
     rescale = 1./255
)

train_data = train_datagen.flow_from_directory(directory= "/content/Animal Classification/dataset",
                                               target_size=(224,224),
                                               batch_size=32,
                                  )


train_data.class_indices
